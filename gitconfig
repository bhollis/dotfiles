[user]
  name = Ben Hollis
  email = ben@benhollis.net

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto

[branch]
  autosetuprebase = always
  autosetupmerge = always

# Always prune remote branches when fetching
[fetch]
  prune = true

[core]
  autocrlf = input
  excludesFile = ~/.dotfiles/gitignore_global
  fsmonitor = true
  untrackedCache = true

[diff]
  algorithm = histogram

[alias]
  amend = commit --amend
  wdiff = diff --color-words
  s = status
  stat = diff --stat
  # Wait how do aliases work
  track = branch --set-upstream-to
  b = branch -v
  p = pull --rebase
  merged = branch --merged

[rerere]
  enabled = true

[credential]
  helper = osxkeychain
[push]
  default = upstream
[pull]
  rebase = true
[advice]
  statusHints = false

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  required = true
  clean = git-lfs clean -- %f
  process = git-lfs filter-process

[includeIf "hasconfig:remote.*.url:git@github.com:StatelyCloud/**"]
  path = dotfiles/gitconfig-work
